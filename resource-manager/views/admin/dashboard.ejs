<%- include('../partials/head', { title }) %>
<%- include('../partials/navbar') %>
<div class="container py-4">
  <%- include('../partials/messages') %>
  <h1 class="mb-4">Admin Dashboard</h1>
  <p class="text-muted">Quick overview of community activity.</p>
  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <div class="card shadow-sm border-0 text-center">
        <div class="card-body">
          <p class="text-muted mb-1">Total users</p>
          <h2 class="fw-bold"><%= stats.totalUsers %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm border-0 text-center">
        <div class="card-body">
          <p class="text-muted mb-1">Total resources</p>
          <h2 class="fw-bold"><%= stats.totalResources %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm border-0 text-center">
        <div class="card-body">
          <p class="text-muted mb-1">Pending approvals</p>
          <h2 class="fw-bold text-warning"><%= stats.pendingResources %></h2>
          <a href="/admin/resources?status=PENDING" class="small">Review now â†’</a>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Pending public resources</h4>
        <a href="/admin/resources" class="btn btn-sm btn-outline-primary">Manage all</a>
      </div>
      <% if (stats.pendingList.length) { %>
      <div class="list-group">
        <% stats.pendingList.forEach((item) => { %>
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= item.title %></strong>
            <p class="mb-0 small text-muted">
              @<%= item.username %> â€¢ <%= item.domain_name || 'Uncategorized' %>
            </p>
          </div>
          <div class="d-flex gap-2">
            <form action="/admin/resources/<%= item.id %>/approve" method="POST">
              <button class="btn btn-sm btn-success">Approve</button>
            </form>
            <form action="/admin/resources/<%= item.id %>/reject" method="POST">
              <button class="btn btn-sm btn-outline-danger">Reject</button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <p class="text-muted mb-0">No pending public submissions ðŸŽ‰</p>
      <% } %>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>

