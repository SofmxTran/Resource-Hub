<%- include('partials/head', { title }) %>
<%- include('partials/navbar') %>
<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <p class="text-uppercase text-muted small mb-1">Public profile</p>
      <h2 class="mb-0"><%= profileUser.full_name %> (@<%= profileUser.username %>)</h2>
      <p class="text-muted mb-0">Showing public resources only.</p>
    </div>
    <a href="/" class="btn btn-outline-secondary">Back to home</a>
  </div>

  <% if (resources.length) { %>
  <div class="row g-4">
    <% resources.forEach((resource) => { %>
    <div class="col-md-6">
      <div class="card h-100 shadow-sm border-0">
        <% if (resource.image_path) { %>
        <img
          src="/uploads/<%= resource.image_path %>"
          class="card-img-top"
          alt="Thumbnail for <%= resource.title %>"
          style="max-height: 220px; object-fit: cover;"
        />
        <% } %>
        <div class="card-body d-flex flex-column">
          <div class="d-flex justify-content-between mb-2">
            <div>
              <h5 class="card-title mb-1"><%= resource.title %></h5>
              <small class="text-muted">
                <%= resource.domain_name || 'Uncategorized' %> â€¢
                <%= new Date(resource.created_at).toLocaleDateString() %>
              </small>
            </div>
            <span class="badge <%= resource.type === 'FILE' ? 'bg-info text-dark' : 'bg-success' %>">
              <%= resource.type %>
            </span>
          </div>
          <p class="card-text flex-grow-1"><%= resource.description || 'No description provided.' %></p>
          <% if (resource.purpose) { %>
          <p class="small text-muted mb-1">Purpose: <%= resource.purpose %></p>
          <% } %>
          <p class="small text-muted mb-3">Trust score: <strong><%= resource.trust_score || 0 %></strong></p>
          <div class="mt-auto d-flex gap-2">
            <% if (resource.type === 'FILE' && resource.file_path) { %>
            <a href="/uploads/<%= resource.file_path %>" target="_blank" class="btn btn-outline-secondary btn-sm">
              Download file
            </a>
            <% } %>
            <% if (resource.type === 'LINK' && resource.url) { %>
            <a href="<%= resource.url %>" target="_blank" class="btn btn-outline-secondary btn-sm">
              Open link
            </a>
            <% } %>
            <a href="/resources/<%= resource.id %>" class="btn btn-primary btn-sm">Details</a>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <div class="text-center py-5">
    <p class="text-muted mb-0">This user has not shared any public resources yet.</p>
  </div>
  <% } %>
</div>
<%- include('partials/footer') %>

