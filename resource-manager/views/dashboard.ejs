<%- include('partials/head', { title }) %>
<%- include('partials/navbar') %>
<div class="container py-4">
  <%- include('partials/messages') %>
  <div class="row g-4 mb-4">
    <div class="col-md-4">
      <div class="card shadow-sm border-0">
        <div class="card-body text-center">
          <p class="text-muted mb-1">Total Resources</p>
          <h2 class="fw-bold"><%= stats.totalResources %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <h5 class="card-title">By Domain</h5>
          <% if (stats.breakdown.length) { %>
          <ul class="list-group list-group-flush">
            <% stats.breakdown.forEach((row) => { %>
            <li class="list-group-item d-flex justify-content-between">
              <span><%= row.domain_name %></span>
              <strong><%= row.total %></strong>
            </li>
            <% }) %>
          </ul>
          <% } else { %>
          <p class="text-muted mb-0 small">No data yet.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-md-6">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title mb-0">Recent Resources</h5>
            <a href="/resources" class="small">View all</a>
          </div>
          <% if (stats.recent.length) { %>
          <div class="list-group">
            <% stats.recent.forEach((item) => { %>
            <a href="/resources/<%= item.id %>/edit" class="list-group-item list-group-item-action">
              <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1"><%= item.title %></h6>
                <small><%= item.type %></small>
              </div>
              <small class="text-muted"><%= item.domain_name || 'Uncategorized' %></small>
            </a>
            <% }) %>
          </div>
          <% } else { %>
          <p class="text-muted">No resources yet.</p>
          <% } %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title mb-0">Favorites</h5>
            <span class="badge bg-warning text-dark"><%= stats.favorites.length %></span>
          </div>
          <% if (stats.favorites.length) { %>
          <ul class="list-group list-group-flush">
            <% stats.favorites.forEach((fav) => { %>
            <li class="list-group-item">
              <strong><%= fav.title %></strong>
              <p class="mb-1 small"><%= fav.description || 'No description' %></p>
              <small class="text-muted"><%= fav.domain_name || 'Uncategorized' %></small>
            </li>
            <% }) %>
          </ul>
          <% } else { %>
          <p class="text-muted">Mark resources as favorites to see them here.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>

