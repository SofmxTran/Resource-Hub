<%- include('partials/head', { title }) %>
<%- include('partials/navbar') %>
<div class="container py-5">
  <%- include('partials/messages') %>
  <h1 class="mb-4" data-aos="fade-up">
    <i class="fas fa-tachometer-alt me-2 text-primary"></i>Dashboard
  </h1>
  <div class="row g-4 mb-4">
    <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="fas fa-folder fa-3x text-primary mb-3"></i>
          <p class="text-muted mb-1">Total Resources</p>
          <h2 class="fw-bold text-primary"><%= stats.totalResources %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="fas fa-eye fa-3x text-accent mb-3"></i>
          <p class="text-muted mb-1">Visibility</p>
          <div class="d-flex justify-content-around">
            <div>
              <p class="mb-1 text-uppercase small text-muted">Public</p>
              <h4 class="fw-semibold text-success"><%= stats.visibility.public %></h4>
            </div>
            <div>
              <p class="mb-1 text-uppercase small text-muted">Private</p>
              <h4 class="fw-semibold text-muted"><%= stats.visibility.private %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title">
            <i class="fas fa-tags me-2 text-primary"></i>By Domain
          </h5>
          <% if (stats.breakdown.length) { %>
          <ul class="list-group list-group-flush">
            <% stats.breakdown.forEach((row) => { %>
            <li class="list-group-item d-flex justify-content-between">
              <span><%= row.domain_name %></span>
              <strong class="text-primary"><%= row.total %></strong>
            </li>
            <% }) %>
          </ul>
          <% } else { %>
          <p class="text-muted mb-0 small">No data yet.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-md-6" data-aos="fade-up" data-aos-delay="400">
      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title mb-0">
              <i class="fas fa-clock me-2 text-primary"></i>Recent Resources
            </h5>
            <a href="/resources" class="btn btn-sm btn-outline-primary">View all</a>
          </div>
          <% if (stats.recent.length) { %>
          <div class="list-group">
            <% stats.recent.forEach((item) => { %>
            <a href="/resources/<%= item.id %>/edit" class="list-group-item list-group-item-action">
              <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1"><%= item.title %></h6>
                <span class="badge <%= item.type === 'FILE' ? 'bg-info' : 'bg-success' %>"><%= item.type %></span>
              </div>
              <small class="text-muted">
                <i class="fas fa-tag me-1"></i><%= item.domain_name || 'Uncategorized' %>
              </small>
            </a>
            <% }) %>
          </div>
          <% } else { %>
          <p class="text-muted">No resources yet.</p>
          <% } %>
        </div>
      </div>
    </div>
    <div class="col-md-6" data-aos="fade-up" data-aos-delay="500">
      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title mb-0">
              <i class="fas fa-star me-2 text-warning"></i>Favorites
            </h5>
            <span class="badge bg-warning text-dark"><%= stats.favorites.length %></span>
          </div>
          <% if (stats.favorites.length) { %>
          <ul class="list-group list-group-flush">
            <% stats.favorites.forEach((fav) => { %>
            <li class="list-group-item">
              <strong><%= fav.title %></strong>
              <p class="mb-1 small text-muted"><%= fav.description || 'No description' %></p>
              <small class="text-muted">
                <i class="fas fa-tag me-1"></i><%= fav.domain_name || 'Uncategorized' %>
              </small>
            </li>
            <% }) %>
          </ul>
          <% } else { %>
          <p class="text-muted">Mark resources as favorites to see them here.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div class="card mt-4" data-aos="fade-up" data-aos-delay="600">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="card-title mb-0">
          <i class="fas fa-fire me-2 text-primary"></i>Community Spotlight
        </h5>
        <a href="/" class="btn btn-sm btn-outline-primary">View public feed</a>
      </div>
      <% if (stats.publicFeed.length) { %>
      <div class="list-group">
        <% stats.publicFeed.forEach((item) => { %>
        <a href="/u/<%= item.username %>" class="list-group-item list-group-item-action">
          <div class="d-flex w-100 justify-content-between">
            <h6 class="mb-1"><%= item.title %></h6>
            <small class="text-primary">
              <%= item.display_name || item.full_name || item.username %> (@<%= item.username %>)
            </small>
          </div>
          <small class="text-muted">
            <span class="badge <%= item.type === 'FILE' ? 'bg-info' : 'bg-success' %> me-2"><%= item.type %></span>
            <%= item.domain_name || 'Uncategorized' %> •
            <%= new Date(item.created_at).toLocaleDateString() %>
          </small>
        </a>
        <% }) %>
      </div>
      <% } else { %>
      <p class="text-muted mb-0">No public resources yet. Share one to get featured!</p>
      <% } %>
    </div>
  </div>
</div>
<%- include('partials/footer') %>

