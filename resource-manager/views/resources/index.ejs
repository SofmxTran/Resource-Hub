<%- include('../partials/head', { title }) %>
<%- include('../partials/navbar') %>
<div class="container py-4">
  <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
    <h3 class="mb-0">My Resources</h3>
    <a class="btn btn-primary" href="/resources/new">Add Resource</a>
  </div>
  <%- include('../partials/messages') %>
  <% const purposeOptions = ['Study','Video Editing','Reference','Practice','Other']; %>
  <div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
      <form class="row gy-2 gx-3 align-items-end" action="/resources" method="GET">
        <div class="col-md-3">
          <label class="form-label">Domain</label>
          <select class="form-select" name="domain">
            <option value="all" <%= filters.domain === 'all' ? 'selected' : '' %>>
              All
            </option>
            <% domains.forEach((d) => { %>
            <option value="<%= d.id %>" <%= filters.domain == d.id ? 'selected' : '' %>>
              <%= d.name %>
            </option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-2">
          <label class="form-label">Type</label>
          <select class="form-select" name="type">
            <option value="all" <%= filters.type === 'all' ? 'selected' : '' %>>
              All Types
            </option>
            <option value="FILE" <%= filters.type === 'FILE' ? 'selected' : '' %>>
              File
            </option>
            <option value="LINK" <%= filters.type === 'LINK' ? 'selected' : '' %>>
              Link
            </option>
            <option value="POST" <%= filters.type === 'POST' ? 'selected' : '' %>>
              Post / Article
            </option>
          </select>
        </div>
        <div class="col-md-2">
          <label class="form-label">Purpose</label>
          <select class="form-select" name="purpose">
            <option value="all" <%= filters.purpose === 'all' ? 'selected' : '' %>>
              All
            </option>
            <% purposeOptions.forEach((p) => { %>
            <option value="<%= p %>" <%= filters.purpose === p ? 'selected' : '' %>>
              <%= p %>
            </option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-2">
          <label class="form-label">Status</label>
          <select class="form-select" name="status">
            <option value="ALL" <%= filters.status === 'ALL' ? 'selected' : '' %>>
              Any
            </option>
            <option value="PENDING" <%= filters.status === 'PENDING' ? 'selected' : '' %>>
              Pending
            </option>
            <option value="APPROVED" <%= filters.status === 'APPROVED' ? 'selected' : '' %>>
              Approved
            </option>
            <option value="REJECTED" <%= filters.status === 'REJECTED' ? 'selected' : '' %>>
              Rejected
            </option>
          </select>
        </div>
        <div class="col-md-3">
          <label class="form-label">Search</label>
          <input
            type="text"
            name="q"
            class="form-control"
            placeholder="Title or description"
            value="<%= filters.q %>"
          />
        </div>
        <div class="col-md-2">
          <div class="form-check mt-4">
            <input
              class="form-check-input"
              type="checkbox"
              name="favorite"
              value="1"
              <%= filters.favorite === '1' ? 'checked' : '' %>
            />
            <label class="form-check-label">Favorites only</label>
          </div>
        </div>
        <div class="col-12 text-end">
          <button class="btn btn-secondary me-2">Apply</button>
          <a class="btn btn-link" href="/resources">Reset</a>
        </div>
      </form>
    </div>
  </div>
  <p class="text-muted small mb-3">Public resources marked as pending will appear on the home feed after an admin approves them.</p>

  <div class="card shadow-sm border-0">
    <div class="card-body">
      <% if (resources.length) { %>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th style="min-width: 200px;">Title</th>
              <th style="min-width: 120px;">Domain</th>
              <th style="min-width: 100px;">Purpose</th>
              <th style="min-width: 80px;">Type</th>
              <th style="min-width: 60px; text-align: center;">Trust</th>
              <th style="min-width: 100px;">Visibility</th>
              <th style="min-width: 100px;">Status</th>
              <th style="min-width: 200px; text-align: right;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% resources.forEach((res) => { %>
            <tr>
              <td>
                <strong><a href="/resources/<%= res.id || res._id %>" class="text-decoration-none"><%= res.title || 'Untitled' %></a></strong>
                <% if (res.description) { %>
                <p class="mb-0 small text-muted"><%= res.description %></p>
                <% } %>
              </td>
              <td><%= res.domain_name || 'Uncategorized' %></td>
              <td><%= res.purpose || '-' %></td>
              <td>
                <span class="badge <%= res.type === 'FILE' ? 'bg-info text-dark' : res.type === 'POST' ? 'bg-warning text-dark' : 'bg-success' %>">
                  <%= res.type || 'LINK' %>
                </span>
              </td>
              <td style="text-align: center;"><strong><%= res.trust_score || 0 %></strong></td>
              <td>
                <span class="badge <%= res.is_public ? 'bg-success' : 'bg-secondary' %>">
                  <%= res.is_public ? 'Public' : 'Private' %>
                </span>
              </td>
              <td>
                <span class="badge <%= res.status === 'APPROVED' ? 'bg-success' : res.status === 'PENDING' ? 'bg-warning text-dark' : 'bg-danger' %>">
                  <%= res.status || 'PENDING' %>
                </span>
              </td>
              <td class="text-end" style="white-space: nowrap;">
                <% if (res.type === 'FILE' && res.file_path) { %>
                <a
                  class="btn btn-sm btn-outline-secondary me-1"
                  href="<%= res.file_path && res.file_path.includes('cloudinary.com') ? res.file_path : '/uploads/' + res.file_path %>"
                  target="_blank"
                  title="Download"
                >Download</a>
                <% } %>
                <% if (res.type === 'LINK' && res.url) { %>
                <a
                  class="btn btn-sm btn-outline-secondary me-1"
                  href="<%= res.url %>"
                  target="_blank"
                  title="Visit"
                >Visit</a>
                <% } %>
                <% if (res.type === 'POST') { %>
                <span class="badge bg-warning text-dark me-1">Post</span>
                <% } %>
                <a class="btn btn-sm btn-outline-dark me-1" href="/resources/<%= res.id || res._id %>" title="View">View</a>
                <a class="btn btn-sm btn-outline-primary me-1" href="/resources/<%= res.id || res._id %>/edit" title="Edit">Edit</a>
                <form
                  action="/resources/<%= res.id || res._id %>/favorite"
                  method="POST"
                  class="d-inline me-1"
                >
                  <button type="submit" class="btn btn-sm <%= res.is_favorite ? 'btn-warning' : 'btn-outline-warning' %>" title="<%= res.is_favorite ? 'Remove from favorites' : 'Add to favorites' %>">
                    <%= res.is_favorite ? '★' : '☆' %>
                  </button>
                </form>
                <form
                  action="/resources/<%= res.id || res._id %>/delete"
                  method="POST"
                  class="d-inline"
                  onsubmit="return confirm('Delete this resource?')"
                >
                  <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">Delete</button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="text-center py-5">
        <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
        <p class="text-muted mb-2">
          <% if (filters.domain !== 'all' || filters.type !== 'all' || filters.purpose !== 'all' || filters.status !== 'ALL' || filters.q || filters.favorite === '1') { %>
            No resources found matching your filters. Try adjusting your search criteria.
          <% } else { %>
            You haven't created any resources yet.
          <% } %>
        </p>
        <a href="/resources/new" class="btn btn-primary">
          <i class="fas fa-plus me-2"></i>Create Your First Resource
        </a>
      </div>
      <% } %>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>

