<%- include('../partials/head', { title }) %>
<%- include('../partials/navbar') %>
<div class="container py-5">
  <%- include('../partials/messages') %>
  <div class="row g-4">
    <div class="col-lg-8">
      <div class="card mb-4" data-aos="fade-up">
        <% if (resource.image_path) { %>
        <img
          src="/uploads/<%= resource.image_path %>"
          alt="Thumbnail"
          class="card-img-top"
          style="max-height: 300px; object-fit: cover; border-radius: 16px 16px 0 0;"
        />
        <% } %>
        <div class="card-body">
          <div class="d-flex flex-wrap gap-2 align-items-center mb-3">
            <span class="badge <%= resource.type === 'FILE' ? 'bg-info' : 'bg-success' %>">
              <i class="fas fa-<%= resource.type === 'FILE' ? 'file' : 'link' %> me-1"></i><%= resource.type %>
            </span>
            <span class="badge <%= resource.is_public ? 'bg-success' : 'bg-secondary' %>">
              <i class="fas fa-<%= resource.is_public ? 'globe' : 'lock' %> me-1"></i><%= resource.is_public ? 'Public' : 'Private' %>
            </span>
            <span class="badge <%= resource.status === 'APPROVED' ? 'bg-success' : resource.status === 'PENDING' ? 'bg-warning' : 'bg-danger' %>">
              <%= resource.status %>
            </span>
          </div>
          <h2 class="mb-2"><%= resource.title %></h2>
          <div class="user-display mb-3">
            <% if (resource.avatar_path) { %>
            <img src="/uploads/avatars/<%= resource.avatar_path %>" alt="Avatar" class="avatar" />
            <% } else { %>
            <div class="avatar-placeholder">
              <%= (resource.display_name || resource.full_name || resource.username).charAt(0).toUpperCase() %>
            </div>
            <% } %>
            <div>
              <div>
                <strong class="text-primary"><%= resource.display_name || resource.full_name || resource.username %></strong>
                <a href="/u/<%= resource.username %>" class="text-muted">(@<%= resource.username %>)</a>
              </div>
              <small class="text-muted">
                <i class="fas fa-calendar me-1"></i><%= new Date(resource.created_at).toLocaleDateString() %>
              </small>
            </div>
          </div>
          <p class="mb-3"><%= resource.description || 'No description provided.' %></p>
          <div class="small text-muted mb-4">
            <div class="mb-2">
              <i class="fas fa-tag me-1 text-primary"></i><strong>Domain:</strong> <%= resource.domain_name || 'Uncategorized' %>
            </div>
            <% if (resource.purpose) { %>
            <div class="mb-2">
              <i class="fas fa-bullseye me-1 text-primary"></i><strong>Purpose:</strong> <%= resource.purpose %>
            </div>
            <% } %>
            <div>
              <i class="fas fa-star me-1 text-warning"></i><strong>Trust Score:</strong> <span class="text-primary"><%= resource.trust_score || 0 %></span>
            </div>
          </div>
          <% if (resource.guide_text) { %>
          <div class="mb-4">
            <h5>
              <i class="fas fa-book me-2 text-primary"></i>Guide / Instructions
            </h5>
            <p class="guide-text"><%= resource.guide_text %></p>
          </div>
          <% } %>
          <div class="d-flex flex-wrap gap-2">
            <% if (resource.type === 'FILE' && resource.file_path) { %>
            <a class="btn btn-primary" href="/uploads/<%= resource.file_path %>" target="_blank">
              <i class="fas fa-download me-1"></i>Download File
            </a>
            <% } %>
            <% if (resource.type === 'LINK' && resource.url) { %>
            <a class="btn btn-primary" href="<%= resource.url %>" target="_blank">
              <i class="fas fa-external-link-alt me-1"></i>Open Link
            </a>
            <% } %>
            <% if (currentUser) { %>
            <form action="/resources/<%= resource.id %>/vote" method="POST" class="mb-0">
              <button type="submit" class="btn <%= userVote ? 'btn-success' : 'btn-outline-success' %>">
                <i class="fas fa-<%= userVote ? 'check' : 'thumbs-up' %> me-1"></i><%= userVote ? 'Trusted' : 'Trust this resource' %>
              </button>
            </form>
            <% } else { %>
            <span class="text-muted fst-italic">
              <i class="fas fa-info-circle me-1"></i>Login to trust this resource.
            </span>
            <% } %>
          </div>
        </div>
      </div>

      <% if (isAdmin) { %>
      <div class="card border-warning mb-4" data-aos="fade-up" data-aos-delay="50">
        <div class="card-body">
          <h5 class="card-title mb-3">
            <i class="fas fa-shield-alt me-2 text-warning"></i>Admin Controls
          </h5>
          <div class="mb-3">
            <p class="mb-2">
              <strong>Current Status:</strong> 
              <span class="badge <%= resource.status === 'APPROVED' ? 'bg-success' : resource.status === 'PENDING' ? 'bg-warning' : 'bg-danger' %>">
                <%= resource.status %>
              </span>
            </p>
            <p class="mb-0 small text-muted">
              <i class="fas fa-info-circle me-1"></i>As an admin, you can approve or reject this resource directly from this page.
            </p>
          </div>
          <div class="d-flex flex-wrap gap-2">
            <% if (resource.status === 'PENDING' && resource.is_public) { %>
            <form action="/admin/resources/<%= resource.id %>/approve" method="POST" class="mb-0">
              <button type="submit" class="btn btn-success">
                <i class="fas fa-check me-1"></i>Approve Resource
              </button>
            </form>
            <form action="/admin/resources/<%= resource.id %>/reject" method="POST" class="mb-0">
              <button type="submit" class="btn btn-outline-warning">
                <i class="fas fa-times me-1"></i>Reject Resource
              </button>
            </form>
            <% } else if (resource.status === 'REJECTED' && resource.is_public) { %>
            <form action="/admin/resources/<%= resource.id %>/approve" method="POST" class="mb-0">
              <button type="submit" class="btn btn-success">
                <i class="fas fa-check me-1"></i>Approve Resource
              </button>
            </form>
            <% } else if (resource.status === 'APPROVED' && resource.is_public) { %>
            <form action="/admin/resources/<%= resource.id %>/reject" method="POST" class="mb-0">
              <button type="submit" class="btn btn-outline-warning">
                <i class="fas fa-times me-1"></i>Reject Resource
              </button>
            </form>
            <% } %>
            <a href="/admin/resources?status=<%= resource.status %>" class="btn btn-outline-primary">
              <i class="fas fa-list me-1"></i>View in Admin Panel
            </a>
          </div>
        </div>
      </div>
      <% } %>

      <div class="card" data-aos="fade-up" data-aos-delay="100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">
              <i class="fas fa-comments me-2 text-primary"></i>Comments (<%= comments.length %>)
            </h4>
            <% if (currentUser) { %>
            <span class="badge bg-secondary">
              <i class="fas fa-user me-1"></i>@<%= currentUser.username %>
            </span>
            <% } %>
          </div>
          <% if (comments.length) { %>
          <div class="list-group mb-4">
            <% comments.forEach((comment, index) => { %>
            <div class="list-group-item" data-aos="fade-up" data-aos-delay="<%= (index % 3) * 50 %>">
              <div class="d-flex justify-content-between mb-2">
                <div class="user-display">
                  <% if (comment.avatar_path) { %>
                  <img src="/uploads/avatars/<%= comment.avatar_path %>" alt="Avatar" class="avatar avatar-sm" />
                  <% } else { %>
                  <div class="avatar-placeholder avatar-placeholder-sm">
                    <%= (comment.display_name || comment.full_name || comment.username).charAt(0).toUpperCase() %>
                  </div>
                  <% } %>
                  <div>
                    <strong class="text-primary"><%= comment.display_name || comment.full_name || comment.username %></strong>
                    <a href="/u/<%= comment.username %>" class="text-muted small">(@<%= comment.username %>)</a>
                    <small class="text-muted ms-2">
                      <i class="fas fa-clock me-1"></i><%= new Date(comment.created_at).toLocaleString() %>
                    </small>
                  </div>
                </div>
                <% if (comment.rating) { %>
                <span class="badge bg-warning">
                  <i class="fas fa-star me-1"></i><%= comment.rating %>/5
                </span>
                <% } %>
              </div>
              <p class="mb-2 mt-2"><%= comment.content %></p>
              <% if (currentUser && (currentUser.id === comment.user_id || currentUser.isAdmin)) { %>
              <form
                action="/resources/<%= resource.id %>/comments/<%= comment.id %>/delete"
                method="POST"
                onsubmit="return confirm('Delete this comment?')"
                class="mb-0"
              >
                <button type="submit" class="btn btn-sm btn-outline-danger">
                  <i class="fas fa-trash me-1"></i>Delete
                </button>
              </form>
              <% } %>
            </div>
            <% }) %>
          </div>
          <% } else { %>
          <p class="text-muted text-center py-3">
            <i class="fas fa-comment-slash fa-2x mb-2 d-block"></i>
            No comments yet. Be the first to share feedback.
          </p>
          <% } %>

          <% if (currentUser) { %>
          <form action="/resources/<%= resource.id %>/comments" method="POST" data-aos="fade-up">
            <div class="mb-3">
              <label class="form-label">
                <i class="fas fa-comment me-2"></i>Your feedback
              </label>
              <textarea
                name="content"
                class="form-control"
                rows="3"
                placeholder="What did you like or learn?"
                required
              ></textarea>
            </div>
            <div class="mb-3 col-md-4">
              <label class="form-label">
                <i class="fas fa-star me-2"></i>Rating (optional)
              </label>
              <select class="form-select" name="rating">
                <option value="">No rating</option>
                <option value="5">5 - Excellent</option>
                <option value="4">4</option>
                <option value="3">3</option>
                <option value="2">2</option>
                <option value="1">1 - Needs work</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-paper-plane me-1"></i>Post Comment
            </button>
          </form>
          <% } else { %>
          <p class="text-muted mb-0 text-center">
            <i class="fas fa-sign-in-alt me-1"></i>Login to leave a comment or rating.
          </p>
          <% } %>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card mb-4" data-aos="fade-left">
        <div class="card-body">
          <h5 class="card-title">
            <i class="fas fa-info-circle me-2 text-primary"></i>At a Glance
          </h5>
          <ul class="list-unstyled mb-0">
            <li class="mb-2">
              <i class="fas fa-user me-2 text-muted"></i><strong>Owner:</strong> 
              <a href="/u/<%= resource.username %>" class="text-primary">
                <%= resource.display_name || resource.full_name || resource.username %> (@<%= resource.username %>)
              </a>
            </li>
            <li class="mb-2">
              <i class="fas fa-calendar-plus me-2 text-muted"></i><strong>Created:</strong> 
              <span class="text-muted"><%= new Date(resource.created_at).toLocaleDateString() %></span>
            </li>
            <li class="mb-2">
              <i class="fas fa-calendar-check me-2 text-muted"></i><strong>Updated:</strong> 
              <span class="text-muted"><%= new Date(resource.updated_at).toLocaleDateString() %></span>
            </li>
            <li class="mb-2">
              <i class="fas fa-check-circle me-2 text-muted"></i><strong>Status:</strong> 
              <span class="badge <%= resource.status === 'APPROVED' ? 'bg-success' : resource.status === 'PENDING' ? 'bg-warning' : 'bg-danger' %>">
                <%= resource.status %>
              </span>
            </li>
            <li>
              <i class="fas fa-star me-2 text-warning"></i><strong>Trust Score:</strong> 
              <span class="text-primary"><%= resource.trust_score || 0 %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>

